---
interface Stat {
  label: string;
  value: string;
  description?: string;
  delta?: string;
}

interface Props {
  title?: string;
  eyebrow?: string;
  copy?: string;
  stats?: Stat[];
}

const {
  title = 'By the numbers',
  eyebrow,
  copy,
  stats = [],
} = Astro.props as Props;
---

<section class="space-y-6">
  <header class="space-y-2 max-w-2xl">
    {eyebrow && <p class="eyebrow m-0">{eyebrow}</p>}
    {title && <h2 class="text-3xl sm:text-4xl font-semibold leading-tight text-ink m-0">{title}</h2>}
    {copy && <p class="text-muted m-0">{copy}</p>}
  </header>

  {stats.length > 0 && (
    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
      {stats.map((stat) => (
        <div class="rounded-2xl border border-border bg-surface px-5 py-6 shadow-[0_8px_40px_-24px_color-mix(in_oklab,var(--color-ink)_40%,transparent)]">
          <div class="flex items-baseline gap-2">
            <p class="text-3xl sm:text-4xl font-semibold tracking-tight text-ink m-0">{stat.value}</p>
            {stat.delta && <span class="text-xs font-semibold text-muted uppercase tracking-[0.12em]">{stat.delta}</span>}
          </div>
          <p class="text-sm uppercase tracking-[0.22em] text-muted m-0 mt-2">{stat.label}</p>
          {stat.description && <p class="text-sm text-muted m-0 mt-2">{stat.description}</p>}
        </div>
      ))}
    </div>
  )}
</section>
